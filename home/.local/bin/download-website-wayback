#!/bin/sh

# https://superuser.com/a/1462412

wget \
	--continue \
	--recursive \
	--span-hosts \
	--convert-links \
	--page-requisites \
	--adjust-extension \
	--execute robots=off \
	--restrict-file-names=windows \
	--user-agent="Mozilla/5.0 (X11; Linux i686; rv:64.0) Gecko/20100101 Firefox/64.0" \
	--accept-regex ".*$1.*" "https://web.archive.org/web/$2/$1"
