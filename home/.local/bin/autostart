#!/bin/sh


if_not_running() {
   if [ -z "$(pgrep --full "$*")" ]; then
      "$@" &
   fi
}


# open port 80
# upnpc -r 80 TCP &

# set the domains to point to this machine
# set-dyn-dns &

# set the brightness
xbacklight -set 75 &

# set the background colour
hsetroot -solid "$BACKGROUND_COLOUR" &
#hsetroot -tile .background.png -tint "$BACKGROUND_COLOUR" &

# sets the mouse cursor to the arrow
xsetroot -cursor_name left_ptr &

# disables the trackpad
# xinput set-prop "SynPS/2 Synaptics TouchPad" "Device Enabled" 0

# disable capslock
xmodmap -e "keycode 66 = Shift_L NoSymbol Shift_L" &

# disable fnlock on thinkpad keyboards
# see: https://github.com/lentinj/tp-compact-keyboard#linux-317-and-above
# echo 0 | sudo tee /sys/bus/hid/devices/*17EF\:604*/fn_lock

# start the hotkey daemon
if_not_running sxhkd

# start the compositor
if_not_running compton

# start the blue light filter
if_not_running redshift

# start the audio server
if_not_running start-pulseaudio-x11

# for thunar's mounter; from the 'policykit-1-gnome' package
if_not_running /usr/lib/policykit-1-gnome/polkit-gnome-authentication-agent-1

# gui applications
if_not_running transmission-gtk
if_not_running keepassx
