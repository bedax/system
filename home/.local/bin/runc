#!/bin/sh

if [ -z "$CC" ]; then
	CC="cc -std=c89"
fi

OUT="$(mktemp)"
CFLAGS="-Wall -Wextra -pedantic -Werror $CFLAGS"
EXTRA_CFLAGS="-fdiagnostics-color=always"

OUTPUT=$($CC $CFLAGS $EXTRA_CFLAGS -o "$OUT" "$1" 2>&1)

if [ $? -eq 0 ]; then
	shift
	clear
	"$OUT" "$@"
	rm -f "$OUT"
else
	clear
	echo "$OUTPUT" | less --RAW-CONTROL-CHARS --quit-if-one-screen --no-init
fi
