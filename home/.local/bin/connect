#!/bin/sh

notify_success() {
   notify-send.py \
      --urgency low \
      --replaces-process confirmation \
      "connected" &
}

notify_failure() {
   notify-send.py \
      --urgency critical \
      --replaces-process confirmation \
      "unable to connect" &
}

(gksudo service networking restart && notify_success) || notify_failure
