{
    "editor.fontFamily": "'Fira Mono', monospace",
    "window.zoomLevel": 1,
    "workbench.colorTheme": "Base16 Dark Ashes",
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingQuotes": "never",
    "editor.autoSurround": "never",
    "editor.colorDecorators": false,
    "editor.folding": false,
    "editor.renderIndentGuides": false,
    "editor.renderLineHighlight": "none",
    "editor.occurrencesHighlight": false,
    "editor.wrappingIndent": "indent",
    "editor.minimap.maxColumn": 80,
    "editor.minimap.renderCharacters": false,
    "editor.rulers": [80],
    "editor.suggest.maxVisibleSuggestions": 8,
    "editor.suggest.showIcons": false,
    "files.enableTrash": false,
    "files.eol": "\n",
    "files.hotExit": "off",
    "files.insertFinalNewline": true,
    "files.simpleDialog.enable": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "workbench.enableExperiments": false,
    "workbench.startupEditor": "none",
    "workbench.iconTheme": null,
    "workbench.sideBar.location": "right",
    "workbench.settings.enableNaturalLanguageSearch": false,
    "window.menuBarVisibility": "toggle",
    "window.restoreWindows": "all",
    "extensions.ignoreRecommendations": true,
    "extensions.showRecommendationsOnlyOnDemand": true,
    "terminal.integrated.cursorStyle": "line",
    "update.mode": "none",
    "git.showPushSuccessNotification": true,
    "html.autoClosingTags": false,
    "html.format.endWithNewline": true,
    "json.format.enable": false,
    "markdown.preview.fontFamily": "'Inter', sans-serif",
    "markdown.preview.lineHeight": 1.4,
    "diffEditor.ignoreTrimWhitespace": true,
    "editor.minimap.enabled": false,
    "diffEditor.renderSideBySide": true,
    "git.confirmSync": false,
    "workbench.colorCustomizations": {
        "[Base16 Dark Ashes]": {
            "statusBar.background": "#1d1f21",
            "statusBar.noFolderBackground": "#1d1f21",
            "statusBar.foreground": "#707880",
            "statusBar.noFolderForeground": "#707880",
            "statusBar.border": "#373b41",
            "statusBar.noFolderBorder": "#373b41"
        },
    }
}
